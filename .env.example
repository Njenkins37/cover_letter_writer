# Copy this file to .env and fill in your values.
# Never commit your .env file to version control.

# Your Gmail address (the one sending the email)
SENDER_EMAIL=you@gmail.com

# Gmail App Password (NOT your regular Gmail password).
# Generate one at: https://myaccount.google.com/apppasswords
# Requires 2-Step Verification to be enabled on your Google account.
SENDER_APP_PASSWORD=xxxx xxxx xxxx xxxx

# Your mom's email address
MOM_EMAIL=mom@example.com

# --- Twilio SMS credentials (get these from https://console.twilio.com) ---
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_FROM_NUMBER=+15550000000
